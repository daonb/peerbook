            <tbody>
            {{range .Peers}}
                <tr>
                    <td>
                        <div class="checkbox-container">
                            <input name="{{.FP}}" type="checkbox"
                                  {{if .Verified}}checked{{end}}>
                            <label for="{{.FP}}"></label>
                        </div>
                    </td>
                    <td>{{.Name}}</td>
                    <td>{{.Kind}}</td>
                    <td>{{.SinceBoot}}</td>
                    <td>{{.SinceConnect}}</td>
                    <td>
                        <div class="checkbox-container">
                            <input name="del-{{.FP}}" type="checkbox">
                            <label for="del-{{.FP}}"></label>
                        </div>
                    </td>
                </tr>
            {{else}}
                <tr>
                    <td colspan="6" class="entire-row">
                        <h3>Your PeerBook is empty</h3>
                    </td>
                </tr>
                <tr>
                    <td colspan="6" class="entire-row">
                        <p>Plesae use <a href="https://terminal7.dev">Terminal7</a>
                            and <a href="https://github.com/tuzig/webexec">
                                webexec</a> to register your servers and clients
                    </td>
                </tr>
            {{end}}
